# Database
DATABASE_URL=postgres://user:password@localhost:5432/statusping

# Server
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-jwt-secret-min-32-chars-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# S3-Compatible Storage (Backblaze B2)
# Leave empty to use mock storage in development
S3_ENDPOINT=https://s3.us-west-000.backblazeb2.com
S3_REGION=us-west-000
S3_ACCESS_KEY_ID=your-key-id
S3_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=statuspingme-uploads
S3_PUBLIC_URL=https://f000.backblazeb2.com/file/statuspingme-uploads
